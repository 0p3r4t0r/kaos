#!/usr/bin/env bash

# ------------------------------------------------------------------------------
# SETTINGS
# ------------------------------------------------------------------------------

set -e

commitmsg=""


# ------------------------------------------------------------------------------
# HELPERS
# ------------------------------------------------------------------------------

function _header {
    header=$1

    echo "-----------------------------------------------------------"
    echo "$header"
    echo -e "-----------------------------------------------------------\n"
}

function _subheader {
    subheader=$1
    length=${#subheader}

    echo "$subheader"
    printf -- "-%.0s" $(seq $length)
    echo "" # newline
}

function _confirm {
    prompt=$1

    while true; do
        read -p "$prompt (y/n): " uservar

        case "$uservar" in
            y|Y|yes|Yes|YES)
                return 0
                ;;

            n|N|no|No|NO)
                return 1
                ;;
        esac
    done
}

function _update_submodule() {
    submodule="$1"

    _subheader "Updating $submodule"
    cd "src/$submodule"

    msg="$submodule>>>$(git rev-parse HEAD)"
    [[ -z $commitmsg ]] && commitmsg="$msg" || commitmsg="$commitmsg:$msg"
    echo "Fast forwarded $submodule: $msg"

    cd -
    git add "src/$submodule"
}


# ------------------------------------------------------------------------------
# MAIN
# ------------------------------------------------------------------------------

# Fast forward submodules
# -----------------
# _header "UPDATE: SUBMODULES"

# echo -n "Updating submodules from remotes..."
# git submodule update --init --remote --merge --quiet
# echo -e "done\n\n"

_header "Submodule Status (CHECK BRANCHES/HASHES)"
git submodule status
echo -e "\n"

_header "Submodule Summary"
git submodule summary

_confirm "Proceed w/ update?"
echo -e "\n"

(! git diff --quiet src/kaos-website) && _update_submodule "kaos-website"
(! git diff --quiet src/kaos-website) && _update_submodule "kaos-website"

if [[ -z $commitmsg ]]; then
    echo "Nothing to update"
else
    git commit -m "submodule update [$commitmsg]"
    git push
fi
